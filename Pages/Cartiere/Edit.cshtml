@page
@model Istrate_Alexandra_Proiect.Pages.Cartiere.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editare</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Cartier.ID" />
            <div class="form-group">
                <label asp-for="Cartier.NumeCartier" class="control-label"></label>
                <input asp-for="Cartier.NumeCartier" class="form-control" />
                <span asp-validation-for="Cartier.NumeCartier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvare" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Cartiere/Index">Inapoi la lista cartierelor</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
